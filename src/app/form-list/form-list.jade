div.row
    div.col-sm-6
        form(role="form" ng-submit="phoneBook.addPerson()")
            div.form-group
                label(for="surname") Surname
                input.form-control#surname(type="text", ng-model="phoneBook.person.surname")
            div.form-group
                label(for="name") Name
                input.form-control#name(type="text", ng-model="phoneBook.person.name")
            div.form-group
                label(for="phone") Phone
                input.form-control#phone(type="text", ng-model="phoneBook.person.phone")
            button Add
    list(items="phoneBook.persons"
        current-page="phoneBook.currentPage"
        items-per-page="phoneBook.itemsPerPage"
        delete-person="phoneBook.deletePerson()"
        current-item="phoneBook.current"
        edit-person="phoneBook.editPerson()")